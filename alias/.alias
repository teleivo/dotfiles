alias ga='git add'
alias gc='git commit'
alias gca='git commit --amend'
alias gcaNoedit='git commit --amend --no-edit'
alias gcm='git commit -m'
alias gcob='git checkout -b'
alias gcod='git checkout -- :/'
alias gd='git diff'
alias gds='git diff --staged'
alias gl='git log --oneline --decorate --all --graph'
alias gp='git push'
alias gpForce='git push --force'
alias grb='git rebase'
alias gs='git status --short'
alias gso='git show --show-signature'
alias gsos='git show --stat'
alias gwip='git commit -m "WIP" --allow-empty'

alias dGetIp='docker inspect -f "{{.NetworkSettings.IPAddress}}"'
alias dGetNetwork='docker inspect  -f "{{json .HostConfig.NetworkMode}}"'
alias dc='docker compose'
alias dps='docker ps --format "table {{.Names}}\t{{.Image}}\t{{.State}}\t{{.Ports}}\t{{.Size}}"'
alias dpsq='docker ps -q'
alias drmRunning='docker rm -f $(docker ps -q)'
alias dvrA="docker volume ls | awk '{ if ( NR>1 ) { print $2 }; }' | xargs docker volume rm"

alias gpgKill='gpgconf --verbose --kill gpg-agent'
alias gpgReload='gpgconf --verbose --reload gpg-agent'

# skill issues :joy:
alias v='nvim'
alias vi='nvim'
alias vim='nvim'
alias vmi='nvim'

# use maven daemon instead of plain maven
alias mvn=mvnd

alias k=kubectl

# moving around directories
alias -g ...='../..'
alias -g ....='../../..'
alias -g .....='../../../..'
alias -g ......='../../../../..'

alias -- -='cd -'
alias 1='cd -1'
alias 2='cd -2'
alias 3='cd -3'
alias 4='cd -4'
alias 5='cd -5'
alias 6='cd -6'
alias 7='cd -7'
alias 8='cd -8'
alias 9='cd -9'

alias ls='ls --color=auto --group-directories-first'
alias la='ls --almost-all'
alias l='la --human-readable --size -l'
