theme = dogrun

mouse-hide-while-typing = true
cursor-style-blink = false

fullscreen = true
maximize = true
# do not show a tab bar
gtk-titlebar = false
gtk-tabs-location = hidden
gtk-titlebar-hide-when-maximized = true

shell-integration = zsh

copy-on-select = clipboard
# turn of for now due to https://github.com/ghostty-org/ghostty/issues/4800
# https://ghostty.org/docs/config/reference#app-notifications
app-notifications = no-clipboard-copy
clipboard-trim-trailing-spaces = true

window-save-state = always

font-family =
font-family = "Gintronic Nerd Font"
font-size = 16
font-feature = -calt
font-feature = -liga
font-feature = -dlig
# only supported on macOS right now
font-thicken = true

# https://ghostty.org/docs/config/keybind/reference
# ctrl++ works out of the box but ctlr+- does not so add custom keybinds
keybind = ctrl+s>+=increase_font_size:1
keybind = ctrl+s>-=decrease_font_size:1
keybind = ctrl+s>r=reload_config
keybind = alt+enter=toggle_fullscreen
keybind = ctrl+s>f=toggle_window_decorations
keybind = ctrl+s>x=close_surface
keybind = ctrl+s>z=toggle_split_zoom
keybind = ctrl+s>e=equalize_splits
keybind = ctrl+s>t=toggle_tab_overview
keybind = ctrl+s>c=new_tab
keybind = ctrl+s>p=previous_tab
keybind = ctrl+s>n=next_tab
keybind = ctrl+s>w=new_window
keybind = ctrl+s>ctrl+v=new_split:right
keybind = ctrl+s>ctrl+h=new_split:down
keybind = ctrl+s>j=goto_split:bottom
keybind = ctrl+s>k=goto_split:top
keybind = ctrl+s>h=goto_split:left
keybind = ctrl+s>l=goto_split:right
# looks like this does not yet work on linux https://github.com/ghostty-org/ghostty/issues/4624
keybind = global:ctrl+grave_accent=toggle_quick_terminal

keybind = shift+enter=text:\n
